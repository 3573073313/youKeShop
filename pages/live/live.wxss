/* pages/live/live.wxss */
.LivePages {
  width: 100%;
  height: auto;
  background-color: #fafafa;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  padding-bottom: 30rpx;
}

.LivePagesSon {
  width: 48%;
  height: 450rpx;
  background-color: #fff;
  overflow: hidden;
  position: relative;
  border-radius: 20rpx;
}

.LivePagesSon>image {
  width: 100%;
}

.livePagesSonCont {
  width: 100%;
  height: 450rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding: 0rpx 20rpx;
}

.liveState {
  width: auto;
  height: 50rpx;
  overflow: hidden;
}

.liveStateTitle {
  width: auto;
  height: 50rpx;
  background-image: linear-gradient(#ff504d 20%, #ff0c08 100%);
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  padding: 0rpx 10rpx;
}

.liveStateMen {
  width: auto;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 0rpx 10rpx;
  line-height: 50rpx;
  color: #fff;
}

.liveTitle {
  width: 100%;
  height: 140rpx;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  padding: 0rpx 20rpx;
}

.liveTitleTitles {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
  -webkit-line-clamp: 1;
}

.liveTitleMain {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffff;
}

.liveTitleMainImg {
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  margin-top: 15rpx;
}

.liveTitleMainImg>image {
  width: 100%;
  height: 100%;
}