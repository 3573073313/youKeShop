/* pages/ranking/ranking.wxss */

.rankingPages {
  width: 100%;
  height: auto;
  background-color: #fafafa;
}

.rankingPagesBtm {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  overflow: hidden;
  z-index: 9999;
}

.rankingPagesBtm>view {
  width: 50%;
  height: 120rpx;
  background-color: #fff;
  text-align: center;
  font-size: 30rpx;
}

.rankingPagesBtm>view>view:nth-child(1) {
  margin-top: 16rpx;
}

.publicMain {
  width: 100%;
  height: auto;
  display: none;
  overflow: hidden;
  padding-bottom: 120rpx;
  background-color: #fafafa;
}

.productSon {
  width: 100%;
  height: 225rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0rpx 30rpx;
  overflow: hidden;
  position: relative;
}


.productSonImg {
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-left: 30rpx;
}

.productSonImg>image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.Active {
  background-color: #fff !important;
  background-image: linear-gradient(#fe957d 0%, #fd5d46 50%);
  color: #fff !important;
  border: none !important;
}


.productSonImgIndex {
  width: 50rpx;
  height: 50rpx;
  color: #fff;
  background-color: rgb(206, 206, 206);
  position: absolute;
  top: 20rpx;
  left: 0rpx;
  z-index: 3333;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
}

.productSonCont {
  flex: 1;
  height: 180rpx;
  margin-top: 20rpx;
  font-size: 34rpx;
}

.productSonContTitle {
  width: 100%;
  height: 100rpx;
  -webkit-line-clamp: 2;
}

.productSonContPeople {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
}

.rankingShop {
  width: 100%;
  height: auto;
  background-color: #fff;
  padding: 20rpx 0rpx;
  position: relative;
}

.rankingShopTitle {
  width: 100%;
  height: 100rpx;
  padding: 0rpx 60rpx;
}

.rankingShopTitleImg {
  width: 100rpx;
  height: 100rpx;
  background-color: #e1e1e1;
  border-radius: 100rpx;
  flex-shrink: 0;
}

.rankingShopTitleImg>image {
  width: 100%;
  height: 100%;
  border-radius: 100rpx;
}

.rankingShopTitleTxt {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
}

.rankingShopCont {
  width: 100%;
  height: 200rpx;
  padding: 0rpx 60rpx;
}

.rankingShopContSon {
  width: 160rpx;
  height: 160rpx;
  background-color: #e1e1e1;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.rankingShopContSon>image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}