/* pages/personal/personal.wxss */
.personalPage {
  width: 100%;
  height: auto;
  background-color: #f7f7f7;
  padding-bottom: 40rpx;
}

.personalPageLogin {
  width: 100%;
  height: 400rpx;
  /* background-color: #f90; */
  position: relative;
}

.personalPageLogin>image {
  width: 100%;
  height: 100%;
}

.personalPageLoginCont {
  width: 90%;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 50rpx;
  left: 50%;
  margin-left: -45%;
  border-radius: 20rpx;
}

.personalPageLoginImg {
  width: 150rpx;
  height: 150rpx;
  background-color: #FFF;
  border-radius: 100rpx;
  margin-top: 24rpx;
  margin-left: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.personalPageLoginImg>image {
  width: 100%;
  height: 100%;
}

.personalPageLoginMagesInfo {
  width: 100%;
  height: 150rpx;
  background-color: transparent;
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: space-evenly;
  position: relative;
}

.personalPageLoginMagesInfoName {
  width: 100%;
  height: auto;
  min-height: 70rpx;
  line-height: 70rpx;
  background-color: transparent;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-top: 10rpx;
}

.btndiyStyle {
  background-color: transparent;
  box-sizing: border-box;
  width: auto;
  text-align: left;
  font-size: 36rpx;
}

button::after {
  border: none;
}

/* 订单信息模块样式编写开始 */
.personalOrder {
  width: 90%;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 10rpx;
  padding: 0rpx 10rpx;
}


.personalOrder>view {
  width: 130rpx;
  height: 150rpx;
  background-color: #fff;
  margin-top: 34rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.personalOrderImg {
  width: 80rpx;
  height: 80rpx;
  /* background-color: plum; */
  margin: 0 auto;
}

.personalOrderImg>image {
  width: 100%;
}

.personalOrderText {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  /* background-color: rgb(130, 236, 176); */
  color: #333;
}

.LoginTitle {
  font-size: 30rpx;
  font-weight: 500;
  height: 45rpx;
  line-height: 50rpx;
}

.LoginVip {
  font-size: 24rpx;
  font-weight: 500;
  /* background-color: #000; */
  background-image: url(https://group.dmeit.cn/svipBg.png);
  line-height: 40rpx;
  color: #fff;
  display: inline;
  border-radius: 10rpx;
  padding: 6rpx 14rpx;
}

/* 签到功能 */
.LoginSign {
  width: auto;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  position: absolute;
  top: 20rpx;
  text-align: center;
  font-size: 24rpx;
  right: -20rpx;
  border-bottom-left-radius: 10rpx;
  border-top-left-radius: 10rpx;
  padding: 10rpx 14rpx;
}

.LoginVipCard {
  width: 90%;
  height: 100rpx;
  background-image: linear-gradient(#000, rgb(59, 59, 59), #666);
  background-color: #e1e1e1;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  margin-left: -45%;
  display: flex;
  flex-direction: row;
  color: #DEB178;
  font-size: 30rpx;
  line-height: 100rpx;
  padding: 0rpx 20rpx;
}

.row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.OkayVip {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/* 开通会员按钮 */
.OpeningVip {
  width: 200rpx;
  height: 45rpx;
  background-color: transparent;
  border-radius: 50rpx;
  margin-top: 30rpx;
  color: #DEB178;
  border: 2rpx solid #DEB178;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 45rpx;
  text-align: center;
}

/* 个人广告轮播区 */
.LoginPoster {
  width: 90%;
  height: 220rpx;
  background-color: #e1e1e1;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.itemSwiper {
  width: 100%;
  height: 220rpx;
  overflow: hidden;
}

.itemSwiper>image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}


/* 个人广告轮播区 */

/* 其他功能区样式 */
.LoginOther {
  width: 90%;
  height: auto;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 0rpx 10rpx;
  padding-bottom: 30rpx;
}

/* 余额 + 收藏 + 积分 */
.LoginOtherBic {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
}

.LoginOtherBicSon {
  width: 100%;
  height: 120rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.LoginOtherBicSon>view {
  width: 33%;
  height: 120rpx;
  background-color: #fff;
  text-align: center;
  color: #333;
}

/* 单分区块 */
.LoginOtherSingle {
  width: 100%;
  height: auto;
}