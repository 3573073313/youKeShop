/* pages/brand_Purchase/brand_Purchase.wxss */
.PurchasePage {
  width: 100%;
  height: auto;
}

/* 导航 */
.PurchasePageNav {
  width: 100%;
  height: 100rpx;
  background-color: #ef2a28;
  position: sticky;
  top: 0rpx;
  z-index: 9999;
}

scroll-view {
  height: 100rpx;
  width: 100%;
  white-space: nowrap;
}

.PurchasePageNavSon {
  width: auto;
  height: 80rpx;
  display: inline-block;
  margin-left: 30rpx;
  line-height: 70rpx;
  text-align: center;
  margin-top: 15rpx;
  color: #fff;
}

.NavSon {
  font-size: 34rpx;
  border-bottom: 8rpx solid #fff;
  box-sizing: border-box;
  font-weight: bold;
}


.PurchasePageNavMain {
  width: 100%;
  height: auto;
  background-color: #fafafa;
}

.PurchasePageNavMainSon {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
  padding: 0rpx 20rpx;
  margin-bottom: 20rpx;
}

.PurchasePageNavMainSonImg {
  width: 150rpx;
  height: 150rpx;
  flex-shrink: 0;
}

.PurchasePageNavMainSonImg>image {
  width: 100%;
  height: 100%;
}

.PurchasePageNavMainSonCnt {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.PurchasePageNavMainSonCntTop {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  -webkit-line-clamp: 2;
}

.PurchasePageNavMainSonCntBtm {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}