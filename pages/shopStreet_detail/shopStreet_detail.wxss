/* pages/shopStreet_detail/shopStreet_detail.wxss */
.businessInformation {
  width: 100%;
  height: 500rpx;
  background-color: #e1e1e1;
  position: relative;
}

.businessInformationBgImg {
  width: 100%;
  height: 500rpx;
  background-color: #e1e1e1;
}

.businessInformationBgImg>image {
  width: 100%;
  height: 100%;
}

.InformationNav {
  width: 100%;
  height: 330rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}

.Information {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
}

.InformationName {
  width: 500rpx;
  height: 160rpx;
  /* background-color: blue; */
  padding: 24rpx 20rpx;
  color: #fff;
  flex-shrink: 0;
}

.InformationNameTitle {
  width: 100%;
  height: 60rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  font-weight: bold;
}

.InformationFollow {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.InformationFollowBtn {
  padding: 0rpx 10rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  background-color: transparent;
  border: 2rpx solid #fff;
  box-sizing: border-box;
  color: #fff;
  border-radius: 50rpx;
  margin: 0 auto;
}

.businessCategory {
  width: 100%;
  height: 100rpx;
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.businessCategoryNav {
  width: auto;
  display: inline-block;
  height: 100rpx;
  text-align: center;
  padding: 0rpx 30rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #fff;
}

.businesIntegral {
  width: 100%;
  height: auto;
}

.product {
  width: 100%;
  height: auto;
  background-color: #fafafa;
  display: none;
}

.navactive {
  font-weight: bold;
  font-size: 34rpx;
}

.show {
  display: block;
}

.productSwiper {
  width: 100%;
  min-height: 200rpx;
  background-color: #e1e1e1;
  overflow: hidden;
}

.SwiperHeight {
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.productSwiper>image {
  width: 100%;
}

.shopStreetDetailImg {
  width: 100%;
  height: auto;
  background-color: #e1e1e1;
}

.shopStreetDetailImgSon {
  width: 100%;
  height: auto;
  background-color: transparent;
}

.shopStreetDetailImgSon>navigator>image {
  width: 100%;
}

.productTitle {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0rpx 30rpx;
}

.productTitleNav {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.productTitleNav>view {
  width: 120rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #8a8a8a;
}

.productTitleImg {
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
  flex-shrink: 0;
  text-align: right;
}

.productTitleImg>image {
  width: 40%;
  height: 40%;
  margin-top: 30rpx;
}

.ShowColor {
  color: #ef2a28 !important;
}

.productList {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0rpx 30rpx;
  flex-wrap: wrap;
}

.productListSon {
  width: 48%;
  height: 470rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0rpx 0rpx 10rpx #e0e0e0;
}

.productListSonImg {
  width: 100%;
  height: 325rpx;
}

.productListSonImg>image {
  width: 100%;
  height: 100%;
}

.productListSonTitle {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0rpx 20rpx;
}

.productListSonPeople {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #ef2a28;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0rpx 20rpx;
}

.font34 {
  font-size: 36rpx;
}

.font35 {
  text-decoration: line-through;
  color: #666;
  font-weight: 200;
}

/* 样式横 */
.transverse {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 10rpx #e0e0e0;
}

.transverse>.productListSonImg {
  width: 250rpx;
  height: 250rpx;
  flex-shrink: 0;
}

.transverse>view {
  width: 60%;
}

.transverse>view>.productListSonTitle {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 100rpx;
  color: #333;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}