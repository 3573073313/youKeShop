/* pages/product_detail/product_detail.wxss */
@import "/app.wxss";

.product_Detail {
	width: 100%;
	height: auto;
	background-color: #fafafa;
	position: relative;
}

.product_DetailImg {
	width: 100%;
	height: 750rpx;
	background-color: #e1e1e1;
	position: relative;
}

.productForward {
	width: 100rpx;
	height: 100rpx;
	background-color: rgba(0, 0, 0, 0.5);
	border-radius: 100rpx;
	position: absolute;
	right: 50rpx;
	bottom: 50rpx;
	text-align: center;
	line-height: 100rpx;
}

swiper {
	width: 100%;
	height: 750rpx;
}

.swiperImg {
	width: 100%;
	height: 750rpx;
}

.swiperImg>image {
	width: 100%;
	height: 100%;
}

/* 产品信息 */
.productInformation {
	width: 100%;
	height: auto;
	overflow: hidden;
	background-color: transparent;
	margin-bottom: 30rpx;
}

/* 标题样式 */
.productInformationTitle {
	width: 100%;
	height: auto;
	background-color: #fff;
	line-height: 48rpx;
	font-size: 34rpx;
	padding: 20rpx 30rpx 10rpx 30rpx;
	font-weight: bold;
	color: #333;
	word-break: break-all;
	text-overflow: ellipsis;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

/* 副标题样式 */
.productInformationSubheading {
	width: 100%;
	height: 55rpx;
	background-color: #fff;
	font-size: 30rpx;
	color: #999;
	padding: 0rpx 30rpx;
}

/* 价格样式 */
.productInformationMoney {
	width: 100%;
	height: 80rpx;
	background-color: #fff;
	font-weight: bold;
	color: #ef2a28;
	font-size: 40rpx;
	padding: 0rpx 30rpx;
	display: flex;
	flex-direction: row;
}

/* 会员样式 */
.productInformationMoneyVip {
	width: auto;
	height: 40rpx;
	/* background-color: #ef2a28; */
	background-image: url(https://group.dmeit.cn/svipBg.png);
	padding: 0rpx 20rpx;
	margin-top: 10rpx;
	margin-left: 20rpx;
	color: #FFF;
	font-size: 28rpx;
	line-height: 40rpx;
	border-radius: 10rpx;
	text-align: center;
}


/* 优惠券保障共样式编写开始 */
.productCoupon {
	width: 100%;
	height: auto;
	background-color: #ef2a28;
	margin-bottom: 30rpx;
}

/* 产品规格样式 */
.productSpecs {
	width: 100%;
	height: auto;
	background-color: #fff;
	margin-bottom: 30rpx;
}


/* 产品详情 + 评价 */
.productDetile {
	width: 100%;
	height: auto;
	min-height: 200rpx;
	padding-bottom: 120rpx;
	background-color: #fafafa;
}

.productDetileTitle {
	width: 100%;
	height: 100rpx;
	background-color: #fff;
	display: flex;
	flex-direction: row;
}

.productDetileTitleCnt {
	width: 50%;
	height: 100rpx;
	text-align: center;
	font-size: 34rpx;
	color: #000;
	line-height: 100rpx;
	background-color: #fff;
	margin: 0rpx 100rpx;
}


.ActiveShow {
	/* background-color: #fff; */
	border-bottom: 10rpx solid #ef2a28;
	box-sizing: border-box;
	color: #ef2a28;
}

/* 详情 + 评价内容层 */
.productDetileContent {
	width: 100%;
	height: auto;
	background-color: #ef2a28;
}


.productDetileContentSon {
	width: 100%;
	height: auto;
	overflow: hidden;
	background-color: #fff;
}

.productDetileContentSon>image {
	width: 100%;
	display: block;
}

.productDetileContentSonShow {
	display: block;
}

.productDetileContentSonHide {
	display: none;
}

.productPayment {
	width: 100%;
	height: 120rpx;
	background-color: #fff;
	position: fixed;
	bottom: 0rpx;
	left: 0rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.productPaymentIconLeft {
	width: auto;
	height: 90rpx;
	/* background-color: #fff; */
	margin-left: 20rpx;
	margin-top: 16rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
}

.productPaymentIcon {
	width: 90rpx;
	height: 90rpx;
	/* background-color: tomato; */
	color: #2c2c2c;
	text-align: center;
	font-size: 24rpx;
	margin-top: 10rpx;
	flex-shrink: 0;
}

.productPaymentShopRight {
	width: 400rpx;
	height: 90rpx;
	background-color: transparent;
	display: flex;
	flex-direction: row;
	border-radius: 50rpx;
	overflow: hidden;
	margin-top: 16rpx;
	margin-right: 20rpx;
}

.productPaymentShopRight>view {
	width: 200rpx;
	height: 90rpx;
	/* background-color: salmon; */
	color: #fff;
	text-align: center;
	line-height: 90rpx;
}


.AddShopColor {
	background-image: linear-gradient(to right, #ffbb1c 0%, #ffd22f 100%);
}

.BuyColor {
	background-image: linear-gradient(to right, #ec1210 0%, #f53e1f 100%);
}

.productDetileContentSonEvaluate {
	width: 92%;
	height: auto;
	background-color: #fff;
	border-bottom: 2rpx solid #e1e1e1;
	box-sizing: border-box;
	margin: 0 auto;
	display: flex;
	padding: 20rpx 0rpx;
	flex-direction: column;
}

.ContentSonEvaluateLoginTime {
	width: 100%;
	height: 60rpx;
	background-color: #fff;
	display: flex;
	flex-direction: row;
	line-height: 65rpx;
	justify-content: space-between;
	color: #333;
}

.ContentSonEvaluateLoginCon {
	display: flex;
	flex-direction: row;
}

.ContentSonEvaluateLogin {
	width: 60rpx;
	height: 60rpx;
	background-color: #e1e1e1;
	border-radius: 50rpx;
	flex-shrink: 0;
	margin-right: 10rpx;
	overflow: hidden;
}

.ContentSonEvaluateLogin>image {
	width: 100%;
	height: 100%;
}

.ContentSonEvaluateLoginLevel {
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	color: #F5A623;
	font-size: 30rpx;
	font-weight: bold;
	background-color: #fff;
}

/* 转发按钮 */
.ShareClass {
	width: 100rpx;
	height: 100rpx;
	background-color: transparent;
	position: absolute;
	top: 0rpx;
	left: 0rpx;

}

.ShareClass::after {
	border: none;
}