/* pages/login_people/login_people.wxss */
@import "../../app.wxss";
@import "../shopStreet_detail/shopStreet_detail.wxss";

.LoginPeoplePage {
  width: 100%;
  height: auto;
}

.LoginPeoplePageNav {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 9999;
}

.LoginPeoplePageNavList {
  width: 50%;
  text-align: center;
  padding: 20rpx 0rpx;
  font-size: 30rpx;
}

.LoginPeoplePageList {
  width: 100%;
  height: auto;
  display: none;
  overflow: hidden;
  padding-bottom: 145rpx;
}

.LoginPeoplePageListShow {
  display: block;
}

.LoginPeoplePageListInformaction {
  width: 94%;
  height: 370rpx;
  background-color: #e1e1e1;
  border-radius: 20rpx;
  background-image: url(https://group.dmeit.cn/yuersPeopleBg.jpg);
  background-size: cover;
  padding: 50rpx 30rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.ListInformactionTitle {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  font-family: 'ShuziFont';
}

.ListInformactionPeople {
  font-weight: bold;
  font-size: 65rpx;
  color: #fff;
  font-family: 'ShuziFont';
}

.LoginPeoplePageThree {
  width: 94%;
  height: 140rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 20rpx;
}

.LoginPeoplePageThree>view {
  flex: 1;
  text-align: center;
  color: #ef2a28;
  font-weight: bold;
  font-size: 26rpx;
}

.LoginPeoplePageThree>view>view:nth-child(1) {
  margin-top: 20rpx;
}

.LoginPeoplePageTwoYq {
  width: 94%;
  height: 120rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.LoginPeoplePageTwoYq>view {
  width: 48%;
  height: 120rpx;
}

.LoginPeoplePageTwoYq>view>image {
  width: 100%;
  height: 100%;
}