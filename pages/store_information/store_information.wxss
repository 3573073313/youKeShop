/* pages/store_information/store_information.wxss */
.storePage {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.storePageInformation {
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e1e1e1;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

.storePageInformationLoginImg {
  width: 120rpx;
  height: 120rpx;
  background-color: #e1e1e1;
  border-radius: 100rpx;
  flex-shrink: 0;
  overflow: hidden;
  margin-top: 27rpx;
}

.storePageInformationLoginImg>image {
  width: 100%;
  height: 100%;
}

.storePageInformationXinXi {
  width: 100%;
  height: 120rpx;
  margin-top: 27rpx;
  margin-left: 20rpx;
}

.storePageInformationXinXiName {
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 18rpx;
}

.TitleStore {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 0rpx 0rpx 0rpx 30rpx;
  line-height: 90rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #e1e1e1;
}

.ContLeft {
  background-color: red !important;
}

.lefts {
  position: relative;
  text-align: left !important;
  color: #495060;
  flex-direction: row;
  justify-content: left !important;
}
