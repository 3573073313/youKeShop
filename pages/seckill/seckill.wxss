/* pages/seckill/seckill.wxss */
@import "/app.wxss";

.seckillPage {
  height: 1600rpx;
}

.SwiperBg {
  height: 360rpx;
  /* background-color: red; */
}

.seckillBanner {
  height: 360rpx;
}

.seckillBanner>image {
  width: 100%;
  height: 100%;
}

.seckillTitle {
  height: 100rpx;
  position: sticky;
  top: 0rpx;
  z-index: 9999;
}

.scroll-box {
  white-space: nowrap;
}

.scroll-box .seckillTitleCont {
  display: inline-block
}

.seckillTitleCont {
  width: auto;
  height: 100rpx;
  background-color: #fff;
}

.seckillTitleContSon {
  width: auto;
  height: 60rpx;
  /* background-color: #ef2a28; */
  background-image: linear-gradient(to right, #ff261f 20%, #ff0400 100%);
  margin-left: 20rpx;
  display: inline-block;
  margin-top: 20rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  box-shadow: 0rpx 1rpx 10rpx #cacaca;
  padding: 0rpx 30rpx;
}

.seckillContent {
  height: auto;
  padding-bottom: 30rpx;
}

.activeShow {
  display: inline-block;
}

.seckillContentSun {
  height: auto !important;
  background-color: #fff;
  padding: 30rpx 30rpx;
  margin: 0rpx 30rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0rpx 0rpx 10rpx #e0e0e0;
  position: relative;
  overflow: hidden;
}

.seckillLable {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(255, 61, 2, 0.9);
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  color: #fff;
  z-index: 2000;
  text-align: center;
  border-bottom-right-radius: 24rpx;
}

.seckillContentSunImg {
  width: 180rpx;
  height: 180rpx;
  background-color: #fff;
  flex-shrink: 0;
  margin-top: 28rpx;
}


.seckillContentSunImg>image {
  width: 100%;
  height: 100%;
}

.seckillContentSunCont {
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-top: 28rpx;
  margin-left: 20rpx;
}

.seckillContentSunContTitle {
  width: 100%;
  height: auto;
  font-weight: bold;
  font-size: 34rpx;
  text-align: left;
  /* background-color: coral; */
}

.seckillBtn {
  width: auto;
  background-image: linear-gradient(to right, #ff9204 0%, #ff2600 100%);
  /* background-color: red; */
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  border-radius: 100rpx;
  float: right;
  display: flex;
  flex-direction: row;
  padding: 14rpx 30rpx;
}

.seckillError {
  width: 100%;
  height: 200rpx;
  text-align: center;
}